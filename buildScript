set -e

scons module_mono_enabled=yes precision=double -j8
bin/godot.windows.editor.double.x86_64.mono.exe --generate-mono-glue modules/mono/glue --precision=double
python ./modules/mono/build_scripts/build_assemblies.py --godot-output-dir ./bin --push-nupkgs-local "G:\GodotSource\GodotNugetSourceData" --precision=double
scons module_mono_enabled=yes precision=double -j8

# Copy nuget data to common place so it can use build templates 
cp -r /g/GodotSource/GodotNugetSourceData   /c/Users/Michael/AppData/Roaming/NuGet/GodotNugetSource
cp -r /g/GodotSource/GodotNugetSourceData   /c/Users/Michael/AppData/Roaming/NuGet/LocalNugetSource

if [[ -z "${TEMPLATES}" ]] ; then
    scons target=template_release tools=no module_mono_enabled=yes precision=double -j8
    scons target=template_debug tools=no module_mono_enabled=yes precision=double -j8
fi

